# AWX Environment Configuration
# This file helps configure the AWX execution environment

# Ansible Configuration
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_RETRY_FILES_ENABLED=False
ANSIBLE_GATHERING=smart
ANSIBLE_FACT_CACHING=jsonfile
ANSIBLE_FACT_CACHING_CONNECTION=/tmp/facts_cache

# Disable privilege escalation for localhost
ANSIBLE_BECOME=False
ANSIBLE_BECOME_METHOD=sudo
ANSIBLE_BECOME_USER=root

# Python settings
PYTHONUNBUFFERED=1

# Locale settings
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8

# AWX specific
ANSIBLE_LOCALHOST_WARNING=False
ANSIBLE_INVENTORY_UNPARSED_WARNING=False